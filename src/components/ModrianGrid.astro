<style>
* {
  box-sizing: border-box;
}
body {
  background-color: #23262d;
  margin: 0;
}
.container {
  display: grid;
  height: 100vh;
  max-width: 100vw;
}
.grid {
  display: grid;
  grid-column-start: 1; 
  grid-row-start: 1;
  z-index: 0;
  max-width: 100vw;
  height: 100vh;
  gap: 2rem;
  padding: 2rem;
  margin: 0;
  animation: resize 8000ms ease infinite both;
}
.content {
  display: grid;
  grid-column-start: 1; 
  grid-row-start: 1;
  z-index: 1;
} 
.item {
  background-color: var(--backup-bg-color, white);
}
.item:nth-child(1) {
  animation: colorChange 8000ms ease 0s infinite both;
}
.item:nth-child(3) { 
  animation: colorChange 8000ms ease 2000ms infinite both;
}
.item:nth-child(7) {
  animation: colorChange 8000ms ease -2000ms infinite both;
}
.item:nth-child(9) {
  animation: colorChange 8000ms ease 4000ms infinite both;
}

@keyframes colorChange {
  0% {
    background-color: #989494;
  }
  25% {
    background-color: #C32F29;
  }
  50% {
    background-color: #343F73;
  }
  75% {
    background-color: #F9CC37;
  }
  100% {
    background-color: #989494;
  }
}
@keyframes resize {
  0% {
    grid-template-columns: 1fr 1fr 1fr;
    grid-template-rows: 1fr 1fr 1fr;
  }
  25% {
    grid-template-columns: 1fr 2fr 4fr;
    grid-template-rows: 1fr 2fr 4fr;
  }
  50% {
    grid-template-columns: 1fr 6fr 1fr;
    grid-template-rows: 1fr 6fr 1fr;
  }
  75% {
    grid-template-columns: 4fr 2fr 1fr;
    grid-template-rows: 4fr 2fr 1fr;
  }
  100% {
    grid-template-columns: 1fr 1fr 1fr;
    grid-template-rows: 1fr 1fr 1fr;
  }
}
</style>