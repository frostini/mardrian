---
import "../styles/theme.css"
import "../styles/animations/colorChange.css"
---
<div class="container">
  <div class="grid">
    <div class="item"></div>
    <div class="item"></div>
    <div class="item"></div>
    <div class="item"></div>
    <div class="item"></div>
    <div class="item"></div>
    <div class="item"></div>
    <div class="item"></div>
    <div class="item"></div>
  </div>
  <div class="content">
    <slot />
  </div>
</div>

<style>
* {
  box-sizing: border-box;
}
body {
  background-color: #23262d;
  margin: 0;
}
.container {
  display: grid;
  height: 100vh;
  max-width: 100vw;
}
.grid {
  display: grid;
  grid-column-start: 1; 
  grid-row-start: 1;
  z-index: 0;
  max-width: 100vw;
  height: 100vh;
  gap: 2rem;
  padding: 2rem;
  margin: 0;
  animation: resize 16s ease infinite both;
}
.content {
  display: grid;
  grid-column-start: 1; 
  grid-row-start: 1;
  z-index: 1;
} 
.item {
  background-color: var(--bg-color, white);
}
.item:nth-child(1) {
  animation: colorChangeBackground 16s ease 0s infinite both;
}
.item:nth-child(7) {
  animation: colorChangeBackground 16s ease -4000ms infinite both;
}
.item:nth-child(9) {
  animation: colorChangeBackground 16s ease -8000ms infinite both;
}


@keyframes resize {
  0% {
    grid-template-columns: 1fr 1fr 1fr;
    grid-template-rows: 1fr 1fr 1fr;
  }
  15% {
    grid-template-columns: 1fr 1fr 1fr;
    grid-template-rows: 1fr 1fr 1fr;
  }
  25% {
    grid-template-columns: 1fr 2fr 4fr;
    grid-template-rows: 1fr 2fr 4fr;
  }
  40% {
    grid-template-columns: 1fr 2fr 4fr;
    grid-template-rows: 1fr 2fr 4fr;
  }
  50% {
    grid-template-columns: 1fr 5fr 1fr;
    grid-template-rows: 1fr 5fr 1fr;
  }
  65% {
    grid-template-columns: 1fr 5fr 1fr;
    grid-template-rows: 1fr 5fr 1fr;
  }
  75% {
    grid-template-columns: 4fr 2fr 1fr;
    grid-template-rows: 4fr 2fr 1fr;
  }
  90% {
    grid-template-columns: 4fr 2fr 1fr;
    grid-template-rows: 4fr 2fr 1fr;
  }
  100% {
    grid-template-columns: 1fr 1fr 1fr;
    grid-template-rows: 1fr 1fr 1fr;
  }
}
</style>