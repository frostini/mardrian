---
import '@fontsource-variable/montserrat';
const { text, color, weight } = Astro.props;
---
<h1>{ text ? text : <slot/> }</h1>

<style define:vars={{ color, weight }}>
  
h1 {
  font-family: "montserrat";
  font-size: 1rem;
  color: var(--color, inherit);
  font-weight: var(--weight, 300);
  margin: 0;
}
</style>