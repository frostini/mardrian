<div class="header">
  <div class="header__logo">
    <h4 class="--light-text"> marlon <b>frausto</b> </h4>
  </div>
  <ul class="header__navigation">
    <li class="--h6">
      <a href="/#home">home</a>
    </li>
    <li class="--h6">
      <a href="/#about">about</a>
    </li>
    <li class="--h6">
      <a href="/blog">blog</a>
    </li>
  </ul>
  <div class="header__cta --h6">
    <a href="/contact">contact <span>/ hire</span></a>
  </div>
</div>

<style>
  .header {
    height: 100%;
    display: grid;
    grid-template-columns: 1fr 5fr 3fr;
    grid-template-rows: 1fr 1fr;
    gap: var(--border-width);
    padding: var(--border-width) 0 0;
  }
  .header__logo {
    display: grid;
    grid-column: 1/3;
    grid-row: 1;
    place-items: center;
    background-color: white;
  }
  .header__navigation {
    display: grid;
    grid-column: 1/3;
    grid-row: 2;
    grid-template-columns: repeat(3, 1fr);
    gap: var(--border-width);
    place-items: center;
    margin: 0;
    padding: 0;
    background-color: white;
  }
  .header__navigation li {
    list-style: none;
  }
  .header__navigation li a {
    text-decoration: none;
  }
  .header__cta {
    overflow: hidden;
    background-color: var(--blue-color);
    text-align: center;
    display: grid;
    grid-column: 3/4;
    grid-row: 1/3;
    align-items: center;
    animation: colorChangeBackground 9s ease -6s infinite both;
  }
  .header__cta a {
    color: white;
    font-weight: 600;
    text-decoration: none;
  }
  @media screen and (min-width: 700px) {
    .header {
      grid-template-columns: 2fr 5fr 2fr;
      padding: 0 0 var(--border-width);
    }
    .header__logo {
      grid-row: 1/3;
      grid-column: 1/2;
    }
    .header__navigation {
      grid-row: 1/3;
      grid-column: 2/3;
      gap: var(--border-width)
    }
  }
</style>