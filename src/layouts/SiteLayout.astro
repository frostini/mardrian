---
import "../styles/theme.css";
import Header from "../components/kit/Header.astro";
import Footer from "../components/kit/Footer.astro";
const { pageTitle, pageColor } = Astro.props;
---
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="viewport" content="minimal-ui,width=device-width, initial-scale=1.0">
    <meta name="generator" content={Astro.generator} />
    <title>{pageTitle ? pageTitle : "Marlon Frausto"}</title>
  </head>
  <body>
    <div class="app">
      <header>
        <Header/>
      </header>
      <main>
        <slot />
        <Footer/>
      </main>
    </div>
  </body>
</html>
<style define:vars={{ pageColor }}>
  .app {
/* restating width in vw as fallback for dvw. can remove vw in 2024*/
    width: 100vw;
    width: 100dvw;
/* restating height in vh as fallback for dvh. can remove vh in 2024*/
    height: 100vh;
    height: 100dvh;
    display: grid;
    grid-template-columns: 1fr;
    grid-template-rows: 1fr 7fr 1fr;
    grid-template-areas:
    "main"
    "main"
    "header";
    border: solid var(--border-width) var(--dark-color);
  }
  header {
    grid-row: header;
  }
  main {
    height: 100%;
    overflow: auto;
    grid-area: main;
    background-color: var(--pageColor);
  }
  @media screen and (min-width: 700px) {
    .app {
      grid-template-areas:
      "header"
      "main"
      "main";
    }
  }
</style>